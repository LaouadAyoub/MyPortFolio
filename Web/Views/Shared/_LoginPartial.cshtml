@using Microsoft.AspNetCore.Identity
@using Web.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item mx-0 mx-lg-1">
            <a id="manage" class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-controller="PortfolioItems" asp-action="Index">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item mx-0 mx-lg-1">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger">Logout</button>
        </form>
    </li>
}
else
